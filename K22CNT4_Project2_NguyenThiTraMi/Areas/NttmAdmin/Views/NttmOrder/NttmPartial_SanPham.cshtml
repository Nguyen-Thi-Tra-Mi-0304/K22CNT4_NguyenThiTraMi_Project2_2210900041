@model IEnumerable<K22CNT4_TTCD1_NguyenThiTraMi.Models.EF.NttmOrderDetail>
@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.NttmProducts.NttmTitle</td>
                    <td>@item.NttmPrice</td>
                    <td>@item.NttmQuantity</td>
                    <td>@K22CNT4_TTCD1_NguyenThiTraMi.Models.Common.Common.FormatNumber((item.NttmPrice * item.NttmQuantity), 0)</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
